<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/recipecard_card">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/recipecard_image"
            android:layout_margin="5dp"
            android:src="@drawable/noimageicon"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp Title"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/recipecard_title"
            android:layout_below="@id/recipecard_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp description"
            android:layout_margin="5dp"
            android:id="@+id/recipecard_description"
            android:layout_below="@id/recipecard_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>